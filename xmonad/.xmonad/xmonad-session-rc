xsetroot -solid '#455a64'
xsettingsd &
# Remap PrtSc to Super_R
setxkbmap -option ctrl:nocaps
xmodmap -e "remove mod4 = Super_R" -e "keycode 107 = Super_R" -e "add mod4 = Super_R"

# For apps that don't respect xsettings
echo "Xft.dpi: 160" | xrdb -merge

xfce4-power-manager &

eval $(gpg-agent --daemon --enable-ssh-support)

nm-applet &
stalonetray &
dunst &
